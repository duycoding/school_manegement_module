<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_tree_view" model="ir.ui.view">
        <field name="name">student.student.tree</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="address"/>
                <field name="phone_number" groups="base.group_user"/>
                <field name="gender"/>
                <field name="email"/>
                <field name="phone"/>
                <!-- Thêm nút lưu và nút xóa -->
                <button string="Save" type="object" class="btn-primary" name="save_record"/>
                <button string="Delete" type="object" class="btn-danger" name="unlink_record"/>
            </tree>
        </field>
    </record>

    <record id="student_form_view" model="ir.ui.view">
        <field name="name">student.student.form</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Save" type="object" class="btn-primary" name="save_record"/>
                    <button string="Delete" type="object" class="btn-danger" name="unlink_record"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="address"/>
                            <field name="phone_number" groups="base.group_user"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="student_search_view" model="ir.ui.view">
        <field name="name">student.student.search</field>
        <field name="model">student.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="age"/>
                <field name="address"/>
                <field name="phone_number" groups="base.group_user"/>
                <field name="gender"/>
                <field name="email"/>
                <field name="phone"/>
            </search>
        </field>
    </record>

    <record id="student_action" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.student</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_student" name="Students"/>
    <menuitem id="menu_student_tree" name="Student List" parent="menu_student"/>
    <menuitem id="menu_student_form" name="New Student" parent="menu_student" action="student_action"/>

</odoo>
